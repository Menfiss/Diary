        <Label Name="PageNumLb" Content="Label" HorizontalAlignment="Center" Margin="0,251,0,0" VerticalAlignment="Top" IsEnabled="False" HorizontalContentAlignment="Center"/>

        <Grid Name="PageCreateGrid" Visibility="Hidden" >

            <Rectangle HorizontalAlignment="Center" Height="434" Stroke="Black" VerticalAlignment="Center" Width="798" Fill="White" StrokeThickness="0"/>
            <TextBox Name="TextForPage" HorizontalAlignment="Left" Margin="225,0,0,0" TextWrapping="Wrap" Text=""  VerticalAlignment="Center" Width="548" Height="414"/>
            <Button Name="AcceptCreateBt" Content="Accept" HorizontalAlignment="Left" Margin="80,336,0,0" VerticalAlignment="Top" Click="AcceptCreateBt_Click" Height="36" Width="66"/>
            <Calendar Name="Calendar" HorizontalAlignment="Left" Margin="25,96,0,0" VerticalAlignment="Top" Height="161" Width="176"/>


        </Grid>


    </Grid>
</Window>
